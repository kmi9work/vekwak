<div id="last_comments">
<% if @last_comments %>
 <% @last_comments.each do |comment| %>
  <h3-orange><%= comment.student.login %></h3-orange> 
  <h3>
    <% if comment.comment %>
      <%= link_to comment.comment.post.title, comment.comment.post %>
    <% else %>
      <%= link_to comment.post.title, comment.post %>
    <% end %>
  </h3> 
  
  </br>
  <%= comment.content %>
    </br>
 <% end %>  
<% end %>
<br>
</div>