<%= form_for(@comment, 
             :url => {:action=> :create, 
                      :topic_id => params[:topic_id], 
                      :comment_id => params[:comment_id]},
             :html => {:id => "new_comment", :style => "display: none;"},
             :remote => true)  do |f| %>
  <p>
    <%= f.text_area :content, :size => "50" %>
  </p>
  <p>
    <%= f.submit 'create comment' -%>
  </p>
<% end -%> 
