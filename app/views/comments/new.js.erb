<% if params[:comment_id] %>
$('#comment_button_<%= params[:comment_id] %>').slideUp();
$("<%= escape_javascript render(:file => 'comments/new.html.erb') %>").insertAfter('#comment_top_<%= params[:comment_id] %>'); 
$('#new_comment_<%= params[:comment_id] %>').slideDown();
$(document).ready(function(){
  $('#comment_new').focus();
});
<% elsif params[:post_id] %>
$('#comment_button').slideUp();
$("<%= escape_javascript render(:file => 'comments/new.html.erb') %>").insertBefore('#comment_button'); 
$('#new_comment').slideDown(); 
<% else %>
alert("Do not do it again!!11");
<% end %>
