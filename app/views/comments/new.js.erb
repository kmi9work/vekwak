<% if params[:comment_id] %>
$('#comment_button_<%= params[:comment_id] %>').slideUp();
$("<%= escape_javascript render(:file => 'comments/new.html.erb') %>").insertBefore('#comment_button_<%= params[:comment_id] %>'); 
<% elsif params[:topic_id] %>
$('#comment_button').slideUp();
$("<%= escape_javascript render(:file => 'comments/new.html.erb') %>").insertBefore('#comment_button'); 
<% else %>
alert("Do not do it again!");
<% end %>
$('#new_comment').slideDown(); 


