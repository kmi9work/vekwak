.show_day{:id => "show_day_#{params[:id]}"}
  = render :partial => "event", :collection => @events
  = link_to "добавить событие", add_day_path(:format => :js, :date => params[:date], :id => params[:id]), :remote => true
  .close
    %a{:href => "#", :onclick => "$('#show_day_#{params[:id]}').slideUp('fast');"} x
  