!!! 5
%html
  %head
    %title Vekwak
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery.min', 'rails', 'application'
    = csrf_meta_tag
  %body
    #top
      #top_line
      #top_students
        = link_to image_tag(@student.avatar ? @student.avatar.url : "noavatar.png", :width => 100, :height => 100), :controller => :messages, :action => :index
        - @students.each do |student|
          .inline{:id => "student_#{student.id}", :class => @students_online.include?(student) ? "online" : "",
                  :onMouseOver => "$('<div id=\"student_#{student.id}_login\" class=\"student_login\">#{student.login}</div>').appendTo('#student_#{student.id}');",
                  :onMouseOut => "$('#student_#{student.id}_login').remove();"}
            = link_to image_tag(student.avatar.url(:small)),
                      student_info_path(:id => student.id, :format => :js),
                      :remote => true
    #info_bg
      .wave_top
        
      #info_center
        .info.inline
          %h1
            = link_to "Новости", news_index_path
          #new_content.info_content
            = render :partial => 'news/news'
          
        .info.inline
          %h1 Последние комментарии
          #last_comments.info_content
            = render :partial => 'comments/last_comments'
        .info.inline
          %h1
            = link_to "Староста", headman_auls_path
          #headman_aul_content.info_content
            = render :partial => 'headman_auls/headman_aul'
      #info_line
        #calendar
          = render :partial => "days/week"
      #info_sections
        -@sections.each do |section|
          .info_sect.inline{:style => "background-color:##{section.color}; width: #{100.0/@sections.size}%;"}
            %h2
              = link_to section.title, "/posts?section_id=#{section.id}" 
      .shadow
  = yield