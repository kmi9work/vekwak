= form_for :novelty, {:url => novelties_path, :remote => true, :html => { :id => "novelty_new", :style => "display: none;" }} do |f| 
  %p= f.text_field :title
  %p= f.text_area :content, :cols => 40, :rows => 5
  %p
    = submit_tag 'Готово'
    .close
      %a(href="#" onclick="$('#novelty_new').slideUp().remove(); $('#novelty_content').slideDown()") x
