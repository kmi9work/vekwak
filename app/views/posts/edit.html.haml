.post_content
  %h1 Editing post
  -form_for(@post) do |f|
    = f.error_messages
    %p
      = f.label :title
      %br
      = f.text_field :title
    %p
      = f.label "Аннотация"
      %br
      = f.text_area :annotation
    %p
      =f.label :content 
      %br
      = f.text_area :content
      %br
      #blinds
        -@students_list.each do |stud|
          = check_box_tag(stud[1])
          = label_tag(stud[1], stud[0])
    %p
    =f.submit 'Update'  
  = link_to 'Back', posts_path