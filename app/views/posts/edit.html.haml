.post_content
  %h1 Editing post
  -form_for(@post) do |f|
    = f.error_messages
    %p
      = f.label :title
      %br
      = f.text_field :title
    %p
      = f.label "Аннотация"
      %br
      = f.text_area :annotation
    %p
      =f.label :content 
      %br
      = f.text_area :content
      
    %p
    =f.submit 'Update'  
  = link_to 'Back', posts_path