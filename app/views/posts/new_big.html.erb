
<div id="new_big_post" class="big_post inline" style="display: none;">
   <div class="wave_top"><div class="wave_border_t"></div></div>
  <%= form_for @post, :remote => true do |f| %>
  <div id="big_post_content" class="post_content">
    <div class="post_title">
     <h2><%= f.text_field :title, :id => "new_big_post[title]" %></h2>
    </div>
    <br>
    <%= f.text_area :annotation, :cols => 40, :rows => 16, :maxlength => 512, :id => "new_big_post[annotation]" %>
    <br>
    <%= f.text_area :content, :cols => 100, :rows => 32, :id => "new_big_post[content]" %>
    <%= f.submit 'Создать' -%>
    <a href="#" onclick="$('#new_big_post').slideUp();">x</a><br>
  </div>  
   <div class="post_bottom">
      <div class="post_bottom_line big_post_bottom_line">
            <%= f.select 'section_id', @sections, :id => "new_big_post[section_id]" %>
      </div>      
    </div>
  <% end %>
    <div class="wave_bottom"><div class="wave_border_b"></div></div>
</div>
