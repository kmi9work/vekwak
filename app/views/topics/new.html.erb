
<div id="new_topic" class="post inline" style="display: none;">
  <% form_for @topic, :remote => true do |f| %>
  <div class="post_content">
    <h2><%= f.text_field :title %></h2>
    <br>
    <%= f.text_area :annotation, :cols => 40, :rows => 15, :maxlength => 512 %>
    <br>
    <%= f.submit 'Создать' %>
  </div>
  <div class="post_bottom">
    <div class="w20 inline"><%= image_tag @student.avatar.url(:small) %></div>
    <div class="section_red inline" style="background-color: #fff">
      <%= Time.now.strftime("%m/%d/%Y") %>
      <div class="my_h1"><%= f.select 'section_id', @sections %></div>
    </div>
    <div class="w20 inline">
      <div class="rating_plus"></div>
      <div class="rating">0</div>
      <div class="rating_minus"></div>
    </div>
  </div>
  <% end %>
</div>
