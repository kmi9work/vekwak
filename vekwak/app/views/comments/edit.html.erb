<h1>Editing comment</h1>

<% form_for @comment, :url => {:controller => 'comments', :action => 'update', :id => @comment.id} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', @topic %>