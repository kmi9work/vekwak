<% if logged_in? -%>
  <div id="student-bar-greeting"><%= link_to_current_student :content_method => :login %></div>
  <div id="student-bar-greeting"><%= @student[:name]%> <%= @student[:second_name]%> </div>
  <div id="student-bar-greeting"><%= @student[:last_name]%> </div>
  <div id="student-bar-greeting">Рейтинг <%= @student[:rating]%></div>
  <div id="student-bar-action"  >(<%= link_to "Выйти", logout_path, { :title => "Log out" }    %>)</div>
<% else -%>
  <div id="student-bar-greeting"><%= link_to_login_with_IP 'Not logged in', :style => 'border: none;' %></div>
  <div id="student-bar-action"  ><%= link_to "Log in",  login_path,  { :title => "Log in" } %> /
                               <%= link_to "Sign up", signup_path, { :title => "Create an account" } %></div>
<% end -%>
