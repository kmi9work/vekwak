<h1>New topic</h1>

<% form_for(@topic) do |f| %>
  <%= f.error_messages %>
	<p>
    <%= f.label "Тема" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Раздел:" %><br />
    <%= f.select 'section_id', @sections %>
  </p>
  <p>
    <%= f.label "Аннотация" %><br />
    <%= f.text_area :annotation, :cols => 100, :rows => 5 %>
  </p>
  <p>
    <%= f.label "Сообщение" %><br />
    <%= f.text_area :content, :cols => 100, :rows => 20 %>
  </p>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>